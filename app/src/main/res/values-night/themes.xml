<resources xmlns:tools="http://schemas.android.com/tools">
    <bool name="lightNavEnabled">false</bool>

    <!-- Base application theme. -->
    <style name="Theme.WeatherAppPoc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDarkColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="o">@color/primaryDarkColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/lightNavEnabled</item>
        <item name="android:navigationBarColor" tools:targetApi="o">?colorSurface</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">@bool/lightNavEnabled</item>
        <!-- Customize your theme here. -->
    </style>
</resources>